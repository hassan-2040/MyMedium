<div class="container">
  <div class="row">


        <h1 class="text-center">Our Writers <small>and their story counts</small></h1>


        <% @users.each do |user| %>
        <div class="col-md-8 col-md-offset-2">
          <ul class="list-group">
            <li class="list-group-item justify-content-between"><%= link_to user.name, user_path(user.id) %><span class="badge badge-default badge-pill"><%=user.stories.count%></span></li>
          </ul>
        </div>


        <%end%>

  </div>

</div>
