
<div class="container">
  <div class="row">
    <h2 class="text-center">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
      <%= f.error_notification %>

      <div class="container col-md-4 col-md-offset-4">
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", class: "form-control" %>
      </div>
      <div class="container col-md-4 col-md-offset-4">
        <div class="row">
          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block"%>
          </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</div>
