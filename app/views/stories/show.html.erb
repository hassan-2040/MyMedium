<div class="container">
  <div class="row">
    <h1 class="text-center">A masterpiece <small>by <%= @story.user.name %></small></h1>

    <div class="jumbotron">

    <p id="notice"><%= notice %></p>

    <p>
      <h2 class="text-center"><strong><em><%= @story.title %></em><strong></h2>

    </p><br>

    <p class="text-justify">

      <%= @story.body %>
    </p>

   </div>


   <div class="container">
     <div class="row">

       <p><%= render partial: "likes" %><%=@story.likes.count%></p>
       <p><%= render partial: "bookmarks" %>
       <% if current_user == @story.user%>
       <%= link_to 'Edit', edit_story_path(@story), class: "btn btn-primary" %>
       <%end%>
       <%= link_to 'Back', stories_path, class: "btn btn-primary" %>
     </div>
   </div>



  </div>
</div>
