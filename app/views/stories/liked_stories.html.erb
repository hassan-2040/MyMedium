<p id="notice"><%= notice %></p>

<h1 class="text-center"><b> All Stories</b> <small>that you loved</small></h1>

<% @stories.each do |story|%>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><em><%= story.title %></em><small class="pull-right" style="color:#fff"><b> by <%= story.user.name %></small></b></h3>
  </div>
  <div class="panel-body">
    <%= story.body %>
  </div>
  <div class="panel-footer">
      <%= link_to 'Show', story, class: "btn btn-info" %>
      <% if current_user == story.user%>
      <%= link_to 'Edit', edit_story_path(story), class: "btn btn-info" %>
      <%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %>
      <%end%>

      <p class="pull-right"><%= time_ago_in_words(story.created_at)  %> ago </p>
  </div>
</div>
  <%end%>




<%= link_to 'New Story', new_story_path, class: "btn btn-primary" %>
